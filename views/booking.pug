extends base.pug


block scripts
  scripts(src="/static/index.js")

block style
   style 
     include ../static/style.css
     include ../static/bookingstyle.css


block content
 section#booking
   h1 Book your pet here!
   div#sponsors1
     img(src="/static/pay1.png", alt="sponsor img", class="spimage1")
     img(src="/static/pay4.jpg", alt="sponsor img", class="spimage1") 
     img(src="/static/pay3.png", alt="sponsor img", class="spimage1")
     h2 Note: please do not enter your original card details, its just a fake website for practise purpose.
   div#bookinginfo
    
    form(action="/contact", method="post",class="mybooking")
       input(type="text",class="myinput1",name="name" , placeholder="Enter the name on your card")
       input(type="text",class="myinput1",name="breed", placeholder="Enter the name of pet/breed" required)
       input(type="number",class="myinput1",name="card", placeholder="Enter Your Card number" required)
       input(type="date",class="myinput1",name="date", placeholder="Enter the expiry date" required)
       input(type="text",class="myinput1",name="address", placeholder="Enter Your Address")
       input(type="text",class="myinput1",name="cvv", placeholder="Enter your CVV number" required)
       button(class="btn")
         |Submit      
       h1 You Can also use the Q-rcode for payment.
       img(src="/static/code.jpg", alt="sponsor img", class="spimage2")    