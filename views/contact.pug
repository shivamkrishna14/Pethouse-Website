block content
  div#contactinfo
    h1 Contact Us
    form(action="/contact", method="post",class="myform")
       input(type="text",class="myinput",name="name", placeholder="Enter Your Name" required)
       input(type="text",class="myinput",name="breed", placeholder="Enter the pet you want & Breed")
